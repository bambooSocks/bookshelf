{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ES6",
        "lib": ["es2020"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "noImplicitAny": true, // maybe false
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "strict": true,
        "pretty": true,
        "allowJs": false,
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "ts-node": {
        "compilerOptions": {"module": "CommonJS"}
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}